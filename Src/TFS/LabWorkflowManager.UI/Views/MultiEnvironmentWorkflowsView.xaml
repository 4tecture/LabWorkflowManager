<UserControl x:Class="LabWorkflowManager.UI.Views.MultiEnvironmentWorkflowsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:appres="clr-namespace:LabWorkflowManager.UI.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80px"/>
        </Grid.RowDefinitions>
        <GroupBox Header="{x:Static appres:ModuleStrings.GrpConnection}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="100px" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30px"/>
                </Grid.RowDefinitions>
                <TextBlock Text="{Binding TeamProjectCollectionUri}" Grid.Column="0" />
                <TextBlock Text="{Binding TeamProjectNamei}" Grid.Column="1"/>
                <Button Content="{x:Static appres:ModuleStrings.BtnConnect}" Command="{Binding ConnectToTfsCommand}" Grid.Column="2"/>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
